{
  "name": "@tari-project/core",
  "version": "0.1.0",
  "description": "Core FFI bindings for Tari cryptocurrency",
  "keywords": [
    "tari",
    "cryptocurrency",
    "blockchain",
    "ffi",
    "neon"
  ],
  "homepage": "https://github.com/tari-project/tari-javascript-sdk",
  "bugs": {
    "url": "https://github.com/tari-project/tari-javascript-sdk/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tari-project/tari-javascript-sdk.git",
    "directory": "packages/@tari/core"
  },
  "license": "BSD-3-Clause",
  "author": "Tari Development Team",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "native/index.node",
    "prebuilds",
    "!native/target",
    "!native/src",
    "!**/*.rs"
  ],
  "scripts": {
    "build": "npm run build:native && npm run build:ts",
    "build:native": "node scripts/build-native.js",
    "build:ts": "tsc",
    "build:dev": "cd native && cargo build --target x86_64-unknown-linux-gnu && cd .. && npm run build:ts",
    "prebuild": "node scripts/prebuild-all.js",
    "install": "node scripts/install.js",
    "clean": "rm -rf dist native/target prebuilds",
    "test": "jest",
    "prepublishOnly": "npm run build && npm test"
  },
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "prebuild-install": "^7.1.1"
  },
  "devDependencies": {
    "@neon-rs/cli": "^0.1.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "cpu": [
    "x64",
    "arm64"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "publishConfig": {
    "access": "public"
  }
}
