{
  "name": "@tari-project/tarijs-build",
  "version": "0.0.1",
  "description": "Build utilities and scripts for Tari JavaScript SDK",
  "keywords": [
    "tari",
    "build",
    "ffi",
    "rust",
    "napi-rs",
    "tooling"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tari-project/tari-javascript-sdk.git",
    "directory": "packages/build"
  },
  "license": "BSD-3-Clause",
  "author": "The Tari Community",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "build-ffi": "./dist/cli.js"
  },
  "files": [
    "dist",
    "configs",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "dev": "npm run build:ts -- --watch",
    "lint": "eslint src/**/*.ts",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=21.6.0"
  },
  "dependencies": {
    "@tari-project/tarijs-core": "*",
    "commander": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.0"
  }
}
