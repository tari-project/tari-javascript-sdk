{
  "name": "tari-javascript-sdk",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "test:unit": "jest --projects packages",
    "test:integration": "jest integration-tests",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "example:exchange-basic": "cd examples/exchange-basic && npm start",
    "example:wallet-cli": "cd examples/wallet-cli && npm start"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@types/jest": "^29.5.8",
    "semver": ">=7.5.2"
  },
  "pnpm": {
    "overrides": {
      "semver": ">=7.5.2"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}
